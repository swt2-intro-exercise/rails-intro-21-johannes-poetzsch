<h1>List of all Authors</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th colspan="3"></h>
    </tr>

    <% @authors.each do |author| %>
        <tr>
            <td><%= link_to author.name, author_path(author) %></td>
            <td><%= author.homepage %></td>
            <td><%= link_to "Show", author_path(author) %></td>
            <td><%= link_to "Edit", edit_author_path(author) %></td>
            <td><%= link_to "Delete", author_path(author), method: :delete %></td>
        </tr>
    <% end %>
</table>

<p>
    <%= link_to 'New', new_author_path %>
</p>